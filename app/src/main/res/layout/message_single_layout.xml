<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chat_message_img"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/avatar" />

    <TextView
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/chat_message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/chat_message_img"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:text="Name" />

    <TextView
        android:paddingLeft="8dp"
        android:id="@+id/chat_single_massage_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chat_message_name"
        android:layout_toRightOf="@+id/chat_message_img"
        android:text="message"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/chat_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/chat_message_name"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="1.25dp"
        android:layout_toRightOf="@+id/chat_message_name"
        android:text="00:00" />

    <ImageView
        android:id="@+id/chat_message_sent_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_below="@+id/chat_message_name"
        android:layout_toRightOf="@+id/chat_message_img"
        android:visibility="gone" />
</RelativeLayout>
